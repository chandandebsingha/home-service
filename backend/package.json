{
  "name": "backend",
  "version": "1.0.0",
  "description": "Home Service Backend API with Supabase and Drizzle ORM",
  "main": "",
  "scripts": {
    "start": "",
    "dev": "node -e \"if(process.env.NODE_ENV==='production'){console.error('Refusing to run nodemon in production. Use npm start instead.');process.exit(1)}\" && nodemon src/index.ts",
    "build": "tsc",
    "start:mem": "node --max-old-space-size=1024 build/index.js",
    "build:dev": "tsc --watch",
    "clean": "rm -rf build",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "db:setup": "node setup-env.js",
    "db:backfill:supabaseUid": "ts-node src/scripts/backfill-supabase-uid.ts",
    "seed:admin": "ts-node src/scripts/seed-admin.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.8",
    "pg": "^8.11.3",
    "postgres": "^3.4.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.2",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "express",
    "typescript",
    "supabase",
    "drizzle-orm",
    "postgresql",
    "api",
    "backend"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": "20.x",
    "npm": ">=8.0.0"
  }
}